<Page
    x:Class="GentApp.Views.CompaniesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="using:GentApp.DataModel"
	mc:Ignorable="d"
    >
    

    <ScrollViewer>
        <StackPanel>
			<TextBlock>Companies:</TextBlock>

			<StackPanel Orientation="Horizontal">
				<ComboBox x:Name="companyTypeComboBox" Width="200" PlaceholderText="Filter by sort" />
				<AutoSuggestBox PlaceholderText="Search a company" QueryIcon="Find" Width="200" />
			</StackPanel>

			<ProgressRing x:Name="progressCompanies" HorizontalAlignment="Left" Margin="5,10,0,0" />

			<ListView ItemsSource="{x:Bind Companies}" IsItemClickEnabled="True" ItemClick="ListView_ItemClick" x:Name="companiesListView">
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="local:Company">
						<StackPanel>
							<TextBlock FontSize="18" Text="{x:Bind Name}" />
							<TextBlock FontSize="10" Text="{x:Bind Address}" />
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>

			</ListView>

		</StackPanel>
    </ScrollViewer>
</Page>
