<Page
    x:Class="GentApp.Views.EditCompanyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<TextBlock Margin="0,50,0,50" HorizontalAlignment="Center">Edit your company:</TextBlock>

		<TextBlock FontWeight="Bold">Name:</TextBlock>
		<TextBox Text="{Binding Name, TargetNullValue='Empty', Mode=TwoWay}"></TextBox>
		<TextBlock FontWeight="Bold">Address:</TextBlock>
		<TextBox Text="{Binding Address, TargetNullValue='Empty', Mode=TwoWay}"></TextBox>
		<TextBlock FontWeight="Bold">Opening hours:</TextBlock>
		<TextBox Text="{Binding OpeningHours, TargetNullValue='Empty', Mode=TwoWay}"></TextBox>
	</StackPanel>
</Page>
