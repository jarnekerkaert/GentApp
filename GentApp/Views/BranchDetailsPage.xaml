<Page
    x:Class="GentApp.Views.BranchDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<TextBlock Margin="0,50,0,50" HorizontalAlignment="Center">Details of branch:</TextBlock>

		<TextBlock FontWeight="Bold">Name:</TextBlock>
		<TextBlock Text="{Binding Name, TargetNullValue='Empty'}"></TextBlock>
		<TextBlock FontWeight="Bold">Address:</TextBlock>
		<TextBlock Text="{Binding Address, TargetNullValue='Empty'}"></TextBlock>
		<TextBlock FontWeight="Bold">Type:</TextBlock>
		<TextBlock Text="{Binding Type, TargetNullValue='Empty'}"></TextBlock>
		<TextBlock FontWeight="Bold">Opening hours:</TextBlock>
		<TextBlock Text="{Binding OpeningHours, TargetNullValue='Empty'}"></TextBlock>

	</StackPanel>
</Page>
