<Page
    x:Class="GentApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GentApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:Name="NavView" 
                        ItemInvoked="NavView_OnItemInvoked"
                        SelectionChanged="NavView_SelectionChanged"
                        BackRequested="NavView_OnBackRequested"
                        Header="Welcome to GentApp!" >
            <NavigationView.MenuItems>
                <NavigationViewItem Tag="Companies_Page" Content="Companies" x:Name="Companies" Icon="List" />
                <NavigationViewItem Tag="RegisterCompany_Page" Content="Register a company" x:Name="RegisterCompany" Icon="Add" />
                <NavigationViewItem Tag="DetailsCompany_Page" Content="Details of your company" x:Name="DetailsCompany" Icon="Edit" />
                <NavigationViewItem Tag="Logout" Content="Logout" x:Name="Logout" Icon="Import"/>
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition/>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger
                        MinWindowWidth="{x:Bind NavView.CompactModeThresholdWidth}" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="NavView.PaneDisplayMode" Value="Top"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</Page>
